<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    android:windowSoftInputMode="adjustPan"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.edu.udea.compumovil.gr0120201.lab1.Lab1Activities.fragments.login.LoginFragment"
        android:label="Login"
        android:windowSoftInputMode="adjustPan"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_poiListFragment"
            app:destination="@id/poiListFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.edu.udea.compumovil.gr0120201.lab1.Lab1Activities.fragments.register.RegisterFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/poiFragment"
        android:name="com.edu.udea.compumovil.gr0120201.lab1.Lab1Activities.fragments.poi.PoiFragment"
        android:label="Administrar lugares"
        tools:layout="@layout/fragment_poi" >
        <action
            android:id="@+id/action_poiFragment_to_poiListFragment"
            app:destination="@id/poiListFragment" />
    </fragment>
    <fragment
        android:id="@+id/poiListFragment"
        android:name="com.edu.udea.compumovil.gr0120201.lab1.Lab1Activities.fragments.poi.PoiListFragment"
