<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:windowSoftInputMode="stateVisible"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Lab1Activities.fragments.poi.PoiAddFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/title_in"
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Título"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/description_in"
        android:layout_width="199dp"
        android:layout_height="106dp"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_in" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/location_in"
        android:layout_width="281dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Ubicación"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_in" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/image_name"
        android:layout_width="287dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nombre de la imagen"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/pickImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_in"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/pickImage"
        android:layout_width="173dp"
        android:layout_height="37dp"
        android:layout_marginTop="104dp"
        android:drawableLeft="@drawable/image_icon"
        android:text="Cargar imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_in" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="Agregar"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickImage" />


</androidx.constraintlayout.widget.ConstraintLayout>